  </m:mrow>
</m:math>

</para>
<para id="element-137">
<m:math display="block">
  <m:mrow>
    <m:mo>=</m:mo>
    <m:mn>0</m:mn>
    <m:mo>;</m:mo>
    <m:mspace width="1em"/>
