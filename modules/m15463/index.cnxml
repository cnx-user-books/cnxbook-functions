				<m:mrow>
					<m:mi>x</m:mi>
				</m:mrow>
			</m:mfenced>
			<m:mo>=</m:mo>
			<m:munderover>
				<m:mrow>
					<m:mi>L</m:mi>
					<m:mi>i</m:mi>
					<m:mi>m</m:mi>
				</m:mrow>
				<m:mrow>
					<m:mi>h</m:mi>
					<m:mo>→</m:mo>
					<m:mn>0</m:mn>
				</m:mrow>
				<m:mrow/>
			</m:munderover>
			<m:mfrac>
				<m:mrow>
					<m:mi>f</m:mi>
					<m:mfenced>
						<m:mrow>
							<m:mi>x</m:mi>
							<m:mo>+</m:mo>
							<m:mi>h</m:mi>
						</m:mrow>
					</m:mfenced>
