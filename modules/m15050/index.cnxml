    <m:msub>
      <m:mi/>
      <m:mn>0.5</m:mn>
    </m:msub>
    <m:mi>x</m:mi>
    <m:mo>=</m:mo>
    <m:mi>∞</m:mi>
  </m:mrow>
</m:math>

</para>
</solution>
</exercise>
</para>


