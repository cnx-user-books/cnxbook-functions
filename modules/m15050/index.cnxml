    </m:munderover>
    <m:mspace width="1em"/>
    <m:mi>cos</m:mi>
    <m:mi>x</m:mi>
    <m:mo>=</m:mo>
    <m:mn>1</m:mn>
  </m:mrow>
</m:math>

</para>

</solution>
</exercise>
</para>



<para id="element-110a">
<exercise id="exercise-110a">
