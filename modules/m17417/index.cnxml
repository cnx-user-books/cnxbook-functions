    </m:msup>
    <m:mo>−</m:mo>
    <m:mn>5</m:mn>
    <m:msup>
      <m:mi>x</m:mi>
      <m:mn>4</m:mn>
    </m:msup>
    <m:mo>+</m:mo>
    <m:mn>5</m:mn>
    <m:msup>
